<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sortby"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#A9A9A9"
        android:padding="8dp"
        android:text="SORT BY"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />




    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="?attr/colorButtonNormal"
        android:padding="6dp"
        android:text="Name"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/sortby"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText" />




    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/radiogroup1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">


            <RadioButton
                android:id="@+id/atoz_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="A to Z"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/ztoa_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="Z to A"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />


    </LinearLayout>


    <TextView
        android:id="@+id/breed_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="?attr/colorButtonNormal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:padding="6dp"
        android:text="Breed Name"
        android:textSize="14sp"
        android:textStyle="bold|italic" />



    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/radiogroup2"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">


                <RadioButton
                    android:id="@+id/atoz_breed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A to Z"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:padding="4dp"
                    tools:ignore="HardcodedText" />

                <RadioButton
                    android:id="@+id/ztoa_breed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="35dp"
                    android:layout_marginStart="35dp"
                    android:text="Z to A"
                    android:textSize="20sp"
                    android:padding="4dp"
                    tools:ignore="HardcodedText" />



</LinearLayout>

            <TextView
                     android:id="@+id/weight"
                     android:layout_width="match_parent"
                     android:layout_height="30dp"
                     android:background="?attr/colorButtonNormal"
                     android:padding="6dp"
                     android:text="Weight"
                      android:layout_margin="12dp"
                     android:textSize="14sp"
                     android:textStyle="bold|italic" />



                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="horizontal"
                     android:id="@+id/radiogroup3"
                     android:layout_marginLeft="12dp"
                     android:layout_marginRight="12dp">

                 <RadioButton
                     android:id="@+id/increasing"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Increasing"
                     android:layout_weight="1"
                     android:textSize="20sp"
                     android:padding="4dp"/>

                 <RadioButton
                     android:id="@+id/decreasing"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="Decreasing"
                     android:textSize="20sp"
                     android:padding="4dp"/>
                 </LinearLayout>



    <TextView
        android:id="@+id/filterby"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#A9A9A9"
        android:padding="8dp"
        android:text="Filter By"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

                 <TextView
                     android:id="@+id/gender"
                     android:layout_width="match_parent"
                     android:layout_height="30dp"
                     android:background="?attr/colorButtonNormal"
                     android:padding="6dp"
                     android:text="Gender"
                     android:layout_margin="12dp"
                     android:layout_alignBottom="@+id/radiogroup3"
                     android:textSize="14sp"
                     android:textStyle="bold|italic" />


             <RadioGroup
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal"
                 android:id="@+id/radiogroup4"
                 android:layout_marginLeft="12dp"
                 android:layout_marginRight="12dp"
              >


                 <RadioButton
                     android:id="@+id/radioButton2"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Male"
                     android:layout_weight="1"
                     android:textSize="20sp"
                     android:padding="4dp"/>

                 <RadioButton
                     android:id="@+id/radioButton3"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="Female"
                     android:textSize="20sp"
                     android:padding="4dp"/>

         </RadioGroup>

         </LinearLayout>
         </ScrollView>
             <Button
                 android:id="@+id/apply"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@color/colorPrimary"
                 android:text="Apply"
                 android:textAlignment="center"
                 android:textStyle="bold"
                 android:textSize="24sp"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true" />


</RelativeLayout>
